  <script>
    // Scroll animation for sections
    document.addEventListener('DOMContentLoaded', function() {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, { threshold: 0.1 });
      
      document.querySelectorAll('section:not(.visible)').forEach(section => {
        observer.observe(section);
      });
    });

    // Logout functionality
    document.getElementById('logout-btn').addEventListener('click', async function () {
      // Clear local/session storage on the client
      localStorage.clear();
      sessionStorage.clear();

      // Call backend logout route to destroy session
      try {
        await fetch('/logout', { 
          method: 'POST', 
          credentials: 'include',
          headers: {
            'Content-Type': 'application/json'
          }
        });
      } catch (error) {
        console.error('Logout error:', error);
      }

      // Redirect to login page
      window.location.href = "/login";
    });

    // Weather functionality
    document.getElementById('search-btn').addEventListener('click', function() {
      const city = document.getElementById('city-input').value.trim();
      if (city) {
        fetchWeather(city);
      } else {
        showWeatherError('Please enter a city name');
      }
    });

    function showWeatherError(message) {
      const errorElement = document.getElementById('weather-error');
      errorElement.textContent = message;
      errorElement.style.display = 'block';
      document.getElementById('weather-card').style.display = 'none';
    }

    function hideWeatherError() {
      document.getElementById('weather-error').style.display = 'none';
    }

    async function fetchWeather(city) {
      hideWeatherError();
      
      try {
        // In a real app, replace with actual API call
        // This is a simulation with random data
        const weatherData = {
          city: city,
          temp: Math.floor(Math.random() * 15) + 20,
          condition: ['Sunny', 'Partly Cloudy', 'Cloudy', 'Rainy', 'Thunderstorm'][Math.floor(Math.random() * 5)],
          humidity: Math.floor(Math.random() * 40) + 50,
          wind: (Math.random() * 10 + 5).toFixed(1),
          pressure: Math.floor(Math.random() * 20) + 1000,
          visibility: (Math.random() * 5 + 5).toFixed(1)
        };
        
        displayWeather(weatherData);
      } catch (error) {
        showWeatherError('Failed to fetch weather data. Please try again.');
        console.error('Weather fetch error:', error);
      }
    }

    function displayWeather(data) {
      document.getElementById('weather-city').textContent = data.city;
      document.getElementById('weather-desc').textContent = data.condition;
      document.getElementById('weather-temp').textContent = data.temp;
      document.getElementById('weather-humidity').textContent = data.humidity + '%';
      document.getElementById('weather-wind').textContent = data.wind + ' km/h';
      document.getElementById('weather-pressure').textContent = data.pressure + ' hPa';
      document.getElementById('weather-visibility').textContent = data.visibility + ' km';
      
      const icon = document.getElementById('weather-icon');
      icon.innerHTML = '';
      let weatherIcon;
      
      if (data.condition.includes('Sunny')) {
        weatherIcon = 'fas fa-sun';
      } else if (data.condition.includes('Cloudy')) {
        weatherIcon = 'fas fa-cloud';
      } else if (data.condition.includes('Rain')) {
        weatherIcon = 'fas fa-cloud-rain';
      } else if (data.condition.includes('Thunderstorm')) {
        weatherIcon = 'fas fa-bolt';
      } else {
        weatherIcon = 'fas fa-cloud-sun';
      }
      
      const iconElement = document.createElement('i');
      iconElement.className = weatherIcon;
      icon.appendChild(iconElement);
      
      document.getElementById('weather-card').style.display = 'block';
    }

    // Form handling
    document.getElementById('contact-form').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const form = e.target;
      const formData = {
        name: form.name.value,
        email: form.email.value,
        subject: form.subject.value,
        message: form.message.value,
      };

      try {
        // In a real app, this would send to your backend
        console.log('Form submitted:', formData);
        
        // Simulate API call
        await new Promise(resolve => setTimeout(resolve, 1000));
        
        alert('Thank you for your message! We will get back to you soon.');
        form.reset();
      } catch (err) {
        alert('Error sending message');
        console.error(err);
      }
    });

    // Performance optimization - lazy load images after DOM is loaded
    window.addEventListener('load', function() {
      const lazyImages = document.querySelectorAll('img[loading="lazy"]');
      lazyImages.forEach(img => {
        if (img.dataset.src) {
          img.src = img.dataset.src;
        }
      });
    });
  </script>
